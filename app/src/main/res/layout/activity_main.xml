<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:ads="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context=".MainActivity"
    android:id="@+id/layout"

    >

    <TextView android:text="CLASSES" android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/classes_title"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:gravity="center"
        android:textSize="40dp"
        android:capitalize="none" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="450dp"
        android:layout_below="@+id/classes_title"
        android:id="@+id/ScrollViewHead">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/RelativeLayoutHead">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"

                android:id="@+id/RelativeLayout"
                android:weightSum="1"

               >
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="60dp"
                    android:inputType="textPersonName"
                    android:text="Enter class name here"
                    android:ems="10"
                    android:id="@+id/edit_text_one"

                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true"
                    android:layout_marginTop="29dp"
                    android:textSize="20sp"
                    android:width="110sp"
                    android:layout_weight="0.77"
                    android:layout_toLeftOf="@+id/view_button"
                    android:layout_toStartOf="@+id/view_button" />
                <Button
                    android:layout_width="105dp"
                    android:layout_height="match_parent"
                    android:text="View Class"
                    android:id="@+id/view_button"
                    android:onClick="onViewClick"
                    android:layout_alignParentRight="true"
                    android:layout_alignBottom="@+id/edit_text_one"
                    android:layout_alignParentTop="true" />
            </RelativeLayout>
            <RelativeLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_below="@+id/RelativeLayout"
                android:id="@+id/RelativeLayout2"
                android:weightSum="1">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="60dp"
                    android:text="Enter class name here"
                    android:ems="10"
                    android:id="@+id/edit_text_two"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true"
                    android:layout_marginTop="29dp"
                    android:textSize="20sp"
                    android:width="110sp"
                    android:layout_weight="0.77"
                    android:layout_toLeftOf="@+id/view_button_two"
                    android:layout_toStartOf="@+id/view_button_two" />
                <Button
                    android:layout_width="105dp"
                    android:layout_height="match_parent"
                    android:text="View Class"
                    android:id="@+id/view_button_two"
                    android:layout_centerHorizontal="true"
                    android:layout_alignParentRight="true"
                    android:layout_alignBottom="@+id/edit_text_two"
                    android:layout_alignParentTop="true" />

            </RelativeLayout>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/RelativeLayout2"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true"
                android:id="@+id/RelativeLayout3"
                android:weightSum="1">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="60dp"
                    android:text="Enter class name here"
                    android:ems="10"
                    android:id="@+id/edit_text_three"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true"
                    android:layout_marginTop="29dp"
                    android:textSize="20sp"
                    android:width="110sp"
                    android:layout_weight="0.77"
                    android:layout_toLeftOf="@+id/view_button_three"
                    android:layout_toStartOf="@+id/view_button_three" />
                <Button
                    android:layout_width="105dp"
                    android:layout_height="match_parent"
                    android:text="View Class"
                    android:id="@+id/view_button_three"
                    android:layout_alignParentRight="true"
                    android:layout_alignBottom="@+id/edit_text_three"
                    android:layout_alignParentTop="true" />

            </RelativeLayout>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/RelativeLayout3"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true"
                android:id="@+id/RelativeLayout4"
                android:orientation="horizontal"
                android:weightSum="1">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="60dp"
                    android:text="Enter class name here"
                    android:ems="10"
                    android:id="@+id/edit_text_four"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true"
                    android:layout_marginTop="29dp"
                    android:textSize="20sp"
                    android:width="110sp"
                    android:layout_weight="0.77"
                    android:layout_toLeftOf="@+id/view_button_four"
                    android:layout_toStartOf="@+id/view_button_four" />
                <Button
                    android:layout_width="105dp"
                    android:layout_height="match_parent"
                    android:text="View Class"
                    android:id="@+id/view_button_four"
                    android:layout_centerHorizontal="true"
                    android:layout_alignParentRight="true"
                    android:layout_alignBottom="@+id/edit_text_four"
                    android:layout_alignParentTop="true" />

            </RelativeLayout>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/RelativeLayout4"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true"
                android:id="@+id/RelativeLayout5"
                android:orientation="horizontal"
                android:weightSum="1">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="60dp"
                    android:text="Enter class name here"
                    android:ems="10"
                    android:id="@+id/edit_text_five"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true"
                    android:layout_marginTop="29dp"
                    android:textSize="20sp"
                    android:width="110sp"
                    android:layout_weight="0.77"
                    android:layout_toLeftOf="@+id/view_button_five"
                    android:layout_toStartOf="@+id/view_button_five" />
                <Button
                    android:layout_width="105dp"
                    android:layout_height="match_parent"
                    android:text="View Class"
                    android:id="@+id/view_button_five"
                    android:layout_centerHorizontal="true"
                    android:layout_alignParentRight="true"
                    android:layout_alignBottom="@+id/edit_text_five"
                    android:layout_alignParentTop="true" />

            </RelativeLayout>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/RelativeLayout5"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true"
                android:id="@+id/RelativeLayout6"
                android:orientation="horizontal"
                android:weightSum="1">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="60dp"
                    android:text="Enter class name here"
                    android:ems="10"
                    android:id="@+id/edit_text_six"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true"
                    android:layout_marginTop="29dp"
                    android:textSize="20sp"
                    android:width="110sp"
                    android:layout_weight="0.77"
                    android:layout_toLeftOf="@+id/view_button_six"
                    android:layout_toStartOf="@+id/view_button_six" />
                <Button
                    android:layout_width="105dp"
                    android:layout_height="match_parent"
                    android:text="View Class"
                    android:id="@+id/view_button_six"
                    android:layout_centerHorizontal="true"
                    android:layout_alignParentRight="true"
                    android:layout_alignBottom="@+id/edit_text_six"
                    android:layout_alignParentTop="true" />

            </RelativeLayout>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/RelativeLayout6"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true"
                android:id="@+id/RelativeLayout7"
                android:orientation="horizontal"
                android:weightSum="1">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="60dp"
                    android:text="Enter class name here"
                    android:ems="10"
                    android:id="@+id/edit_text_seven"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true"
                    android:layout_marginTop="29dp"
                    android:textSize="20sp"
                    android:width="110sp"
                    android:layout_weight="0.77"
                    android:layout_toLeftOf="@+id/view_button_seven"
                    android:layout_toStartOf="@+id/view_button_seven" />
                <Button
                    android:layout_width="105dp"
                    android:layout_height="match_parent"
                    android:text="View Class"
                    android:id="@+id/view_button_seven"
                    android:layout_centerHorizontal="true"
                    android:layout_alignParentRight="true"
                    android:layout_alignBottom="@+id/edit_text_seven"
                    android:layout_alignParentTop="true" />

            </RelativeLayout>
        </RelativeLayout>
    </ScrollView>

    <com.google.android.gms.ads.AdView
        android:id="@+id/adView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_alignParentBottom="true"
        ads:adSize="BANNER"
        ads:adUnitId="@string/banner_ad_unit_id"
        android:layout_below="@+id/ScrollViewHead">
    </com.google.android.gms.ads.AdView>

</RelativeLayout>
