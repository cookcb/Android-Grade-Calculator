<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <TextView
        android:layout_width="fill_parent"
        android:layout_height="60dp"
        android:id="@+id/dialog_assignment_name"
        android:text="Add Grade"
        android:textSize="55dp"/>
    <EditText
        android:layout_width="fill_parent"
        android:layout_height="60dp"
        android:id="@+id/add_grade_name_edittext"
        android:layout_below="@+id/dialog_assignment_name"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />
    <EditText
        android:layout_width="fill_parent"
        android:layout_height="60dp"
        android:id="@+id/add_grade_edittext"
        android:inputType="numberDecimal"
        android:layout_below="@+id/add_grade_name_edittext"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

</RelativeLayout>