<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:weightSum="1">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="60dp">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="54dp"
            android:id="@+id/class_name"
            android:layout_weight="0.06"
            android:gravity="center"
            android:textSize="40sp"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal"
        android:id="@+id/layout">

        <Spinner
            android:layout_width="220dp"
            android:layout_height="54dp"
            android:id="@+id/grade_type"
             />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="54dp"
            android:ems="10"
            android:id="@+id/number_calculation"
            android:layout_gravity="right"
            android:textSize="40sp"/>

    </LinearLayout>


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="355dp"
        android:weightSum="1"
        android:orientation="vertical">

        <Button
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="Clear Data"
            android:id="@+id/clear_button"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />
        <Button
            android:layout_width="fill_parent"
            android:layout_height="37dp"
            android:text="Add Grade"
            android:id="@+id/add_grade_button"
            android:layout_below="@+id/clear_button"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />
        <Button
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="Add Category"
            android:id="@+id/add_assignment_button"
            android:layout_below="@+id/add_grade_button"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />
        <Button
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="View Grades"
            android:id="@+id/view_assignment_button"
            android:layout_below="@+id/add_assignment_button"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />
        <Button
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="Delete Grade"
            android:id="@+id/delete_grade"
            android:layout_below="@+id/view_assignment_button"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />
        <Button
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="Delete Category"
            android:id="@+id/delete_assignment"
            android:layout_below="@+id/delete_grade"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />
        <Button
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="Back"
            android:id="@+id/back_button"
            android:layout_below="@+id/delete_assignment"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />
    </RelativeLayout>


</LinearLayout>